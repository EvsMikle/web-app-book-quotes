package comm.octest.beans;

import java.sql.SQLException;
import java.util.HashMap;
import java.util.Map;

public class BookFactory {
	
	private  static  Map<String,Book> books= new HashMap<>();
	 
    public Author addAuthor(String author_name, String type, String author) throws SQLException {
        //CREATE THE KEY
        String key =  author_name+type+author;
        fetchAuthors() ;
        Book book= (Book) books.get(key) ;
        // IF IT DOESN'T EXIST, CREATE A NEW ONE IN THE MAP
        if (book == null) {
            book = new Book();
            books.put(key, book);
            book.save();   
        }
        return book;
    }


public void fetchAuthors() throws SQLException { 
    	   Book book =  new Book();
    	   book = book.fetchBook() ;
           
           String key =  author_name;
           books.put(key, author);
 
    }
    
  





}
