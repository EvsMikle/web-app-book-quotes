package comm.octest.beans;

import java.sql.SQLException;

import comm.octest.db.DAO;

public class Book {
	private String id_book ; 
	private String name_book; 
	private String book_img;
	private int id_author; 
	private int id_type;
	
	
	public Book(String name_book, int id_type, int id_author) { 
		this.name_book = name_book;
		this.id_type   = id_type; 
		this.id_author = id_author;
		
		
	}
	public Book () {}
	
	
	

	public Book(String id_book, String name_book, String book_img) {
		
		this.id_book = id_book;
		this.name_book = name_book;
		this.book_img = book_img;
	}
	
	public Book fetchBook() throws SQLException { 
		DAO dao = new DAO() ;
        Book book = dao.fetchBooks();
        return book;
	}

	
	public int getId_author() {
		return id_author;
	}
	public void setId_author(int id_author) {
		this.id_author = id_author;
	}
	public void setId_type(int id_type) {
		this.id_type = id_type;
	}
	public void follow_book (int id_user, int id_book ) { 
		//SQL TO ADD IN THE FOLLOW_BOOK TABLE
	}
	
	
	
	//GETTERS AND SETTERS 
	
	public int getId_type() { 
		return id_type;
	}
	public String getId_book() {
		return id_book;
	}
	public void setId_book(String id_book) {
		this.id_book = id_book;
	}
	public String getName_book() {
		return name_book;
	}
	public void setName_book(String name_book) {
		this.name_book = name_book;
	}
	public String getBook_img() {
		return book_img;
	}
	public void setBook_img(String book_img) {
		this.book_img = book_img;
	} 
	

}
